<div class="container">
<h4 class = "pt-3">ダイレクトメッセージ</h4>

<% @entries.each do |entries| %>
<%= link_to entries.user.identification, profile_path(entries.user.profile) %>さん
<% end %>

<% if @messages.present? %>

<table class = "table table-striped table-hover">
<tr>
<th style="width:30%">お名前</th>
<th style="width:50%">本文</th>
<th style="width:20%">送信時刻</th>
</tr>
<% @messages.each do |message| %>
<tr>
  <td><%= message.user.identification %>さん</td>
  <td><%= message.body %></td>
  <td><%= message.created_at.strftime("%Y-%m-%d %H:%M")%></td>
</tr>
<% end %>
</table>

<% end %>

<%= form_with model: @message do |f| %>
<%= f.text_area :body ,placeholder: "メッセージを入力してください",size:"120X50" %>
<%= f.hidden_field :room_id, value: @room.id %>
<%= f.submit "送信",class:"btn btn-primary" %>
<% end %>

<div class = "text-center">
<%=link_to "プロフィール一覧に戻る", profiles_path ,class:"btn btn-primary"%>
</div>

</div>