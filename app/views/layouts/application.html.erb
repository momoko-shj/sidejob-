<!DOCTYPE html>
<html>
  <head>
    <title>Sidejob</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><%= image_tag('logo.png', :size =>'100x100') %> Sidejob!</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              
<% if user_signed_in? %>
        
  <% if current_page? (new_profile_path) %>
  <% else %>
    <li class="nav-item">
    <%= render 'layouts/search' %>
    </li>
    <li class="nav-item">
    <%= link_to 'マイページ', mypage_path(current_user), class: 'nav-link text-dark' %>
    </li>
    <li class="nav-item">
     <%= link_to 'プロフィール一覧', profiles_path, class: 'nav-link text-dark' %>
    </li>
    <li class="nav-item">
     <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
  </li>
  <% end %>

<% elsif admin_signed_in? %>
  <li class="nav-item">
  <%= render 'layouts/search' %>
  </li>
  <li class="nav-item">
  <li class="nav-item">
  <%= link_to 'ユーザー一覧',admin_mypage_path, class: 'nav-link text-dark' %>
  </li>
  <%= link_to 'ログアウト',destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %>
  </li>
  
<% else %>
  <li class="nav-item">
  <%= link_to '新規登録', new_user_registration_path, class: 'nav-link text-dark' %>
  </li>
  <li class="nav-item">
  <%= link_to 'ログイン', new_user_session_path, class: 'nav-link text-dark' %>
  </li>
<% end %>

            
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>  
    
    
   
  </body>
</html>
