<div class="container">
<h4 class = "pt-3">ユーザー一覧</h4>

<table class = "table">
  <tr>
    <th>名前</th>
    <th>ID</th>
    <th>メールアドレス</th>
    <th>電話番号</th>
    <th>プロフィール公開</th>
    <th>登録</th>
    <th>登録日</th>
  </tr>
   <% @users.each do |users| %>
   <tr>
    <td><%= link_to users.name, admin_user_path(users) %></td>
    <td><%= users.identification %></td>
    <td><%= users.email %></td>
    <td><%= users.phone %></td>
    <td><%= users.profile.is_active ? '公開':'非公開' %></td>
    <td>
    <%= users.is_deleted ? '退会済':'登録中'%>
    <%= link_to "退会", withdraw_admin_users_path(@user), method: :patch, class: "btn btn-outline-danger" %>
</td>
    <td><%= users.created_at&.strftime('%Y年%m月%d日 %H:%M') %></td>
    </tr>
   <% end %>
 </table>
 
 </div>