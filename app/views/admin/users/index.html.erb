<div class="container">
<h4 class = "pt-3">ユーザー一覧</h4>

<table class = "table">
  <tr>
    <th>名前</th>
    <th>ID</th>
    <th>メールアドレス</th>
    <th>電話番号</th>
    <th>プロフィール公開</th>
    <th>登録</th>
    <th>登録日</th>
  </tr>
   <% @users.each do |user| %>
   <tr>
    <td><%= link_to user.name, admin_user_path(user) %></td>
    <td><%= user.identification %></td>
    <td><%= user.email %></td>
    <td><%= user.phone %></td>
    <td><%= user.profile.is_active ? '公開':'非公開' %></td>
    <td>
    <%= user.is_deleted ? '退会済':'登録中'%>
    <%= link_to withdraw_admin_users_path(user), method: :patch, class: "btn btn-outline-danger" do %>
      <%= user.is_deleted ? '復活':'退会'%>
    <% end %>
</td>
    <td><%= user.created_at&.strftime('%Y年%m月%d日 %H:%M') %></td>
    </tr>
   <% end %>
 </table>
 
 </div>